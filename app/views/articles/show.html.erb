<h1><%= @article.title %></h1>
<p><font size="5"><%= @article.subtitle %></font></p>
<p><font size="2"><%= @article.body %></font></p>
<p><font size="1">Posted on: <%= @article.created_at.strftime("%B %d, %Y at %H:%M") %></font></p>

<h2>Comments</h2>
<% @article.comments.each do |comment| %>
  <p>
    <strong><%= comment.author %>: </strong>
    <%= comment.comment %>
  </p>
<% end %>

<h2>Add a comment:</h2>
<%= form_with(model: [ @article, @article.comments.build ], local: true) do |form| %>
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :author %>
  </p>
  <p>
    <%= form.label :comment %><br>
    <%= form.text_area :comment %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>
 
<%= link_to 'Back', articles_path %>
